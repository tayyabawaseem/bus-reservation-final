@{
    Layout = null; 

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>SignUp</title>
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background: url('@Url.Content("~/Images/login-bg.png")') no-repeat top center/cover;
            color: #fff;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            min-height: 100vh; /* Full screen height */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: #1f1f1f; /* Dark gray card background */
            border-radius: 8px;
            padding: 2rem;
            width: 100%;
            max-width: 400px;
        }

        .login-card h3 {
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .login-card .form-label {
            color: #ccc; /* Lighter text for labels */
        }

        .login-card .btn-p {
            background-color: #007bff;
            border-color: black;
            width: 100%;
            margin-top: 1rem;
        }

        .social-buttons .btn {
            margin-right: 0.5rem;
        }

        .register-link a {
            color: #007bff;
            text-decoration: none;
        }

        .register-link a:hover {
            text-decoration: underline;
        }


    </style>
</head>
<body>




    <div class="login-container">
        <div class="login-card">
            @* <h3 class="text-center">Welcome  to SRC TRAVEL AGENCY</h3> *@
            <p class="text-secondary text-center">
                Enter Your Credentials to Proceed
            </p> <br />
            <form method="post">
                <!-- Username -->
                <div class="mb-3">
                    <label class="form-label" for="user">Username</label>
                    <input type="text"
                           class="form-control"
                           id="user"
                           name="user"
                           placeholder="Enter your username"
                           required />
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label" for="email">Email address</label>
                    <input
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        placeholder="Enter your email"
                        required
                    />
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        placeholder="Enter your password"
                        required
                    />
                </div>



                <!-- Forgot Password Link -->
                <div class="d-flex justify-content-between mb-3">
                    <div>
                        <input
                            type="checkbox"
                            id="rememberMe"
                            name="rememberMe"
                            class="form-check-input"
                        />
                        <label for="rememberMe" class="form-check-label">Remember me</label>
                    </div>
                </div>

                <!-- Login Button -->
                <button type="submit" class="btn btn-p text-white" style="background-color:#FF5733">
                    Signup
                </button>
            </form>

            <!-- Social Login Buttons -->
            <div class="social-buttons mt-4 text-center">
                <p class="text-secondary">Or Signup with</p>
                <button class="btn btn-outline-light btn-sm">
                    <i class="fab fa-facebook-f"></i> Facebook
                </button>
                <button class="btn btn-outline-light btn-sm">
                    <i class="fab fa-google"></i> Google
                </button>
            </div>
            <div class="register-link text-center mt-4">
                <span>Don't have an account?</span>
                <a asp-controller="Auth" asp-action="LogIn">LogIn here</a>

            </div>

        </div>
    </div>



    <!-- Bootstrap JS -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
    </script>
    <!-- Font Awesome (Optional for icons) -->
    <script
        src="https://kit.fontawesome.com/a076d05399.js"
        crossorigin="anonymous">
    </script>
</body>
</html>
