@model bus_reservation.Models.Bus

@{
    ViewData["Title"] = "Bus Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
<h1>Details</h1>


    <h4>Bus</h4>
    <hr />
    <div class="row g-4 my-2">
        <div class="bg-white rounded h-100 p-4">
    <dl class="row">
                <div class="text-center mb-4">
                    <img src="@Html.DisplayFor(model => model.BusImage)" style="height:200px; width:25%;" alt="Bus Image">
                </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BusNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BusNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalSeats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSeats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class = "col-sm-10">
                    @String.Format("{0:dd/MM/yyyy hh:mm tt}", Model.DepartureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class = "col-sm-10">
                    @String.Format("{0:dd/MM/yyyy hh:mm tt}", Model.ArrivalTime)
        </dd>
       

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BusType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BusType.BusTypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Route)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Route.RouteId)
        </dd>
    </dl>
            <div class="text-center">
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@Model?.BusId">Edit</a> |
                <a class="btn btn-outline-success" asp-action="Index">Back to List</a>
            </div>
        </div>

    </div>

</div>
